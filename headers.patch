@@ -19,7 +19,19 @@
 {
     int masked = __dios_mask( 1 );
     char buffer[ 200 ];
-    snprintf( buffer, 200, "%s:%u: %s: assertion '%s' failed", file, line, fun, stmt );
+
+    const char* prefix = "/opt/divine/include";
+    const int prefix_len = strlen(prefix);
+
+    int shift = 0;
+    char *bgn = strstr( file, "/dios/" );
+    if (bgn != NULL) {
+        file = bgn;
+        strcpy(buffer, prefix);
+        shift += prefix_len;
+    }
+
+    snprintf( buffer + prefix_len, 200 - prefix_len, "%s:%u: %s: assertion '%s' failed", file, line, fun, stmt );
     __dios_fault( _VM_F_Assert, buffer );
     __dios_mask( masked );
 }

